<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <td><span><%= user.name %></span><td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><span><%= user.introduction %></span></td>
    <tr>
  </tbody>
</table>

<div class="row">
  <%= link_to edit_user_path(user.id), method: :get, class: "btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>
