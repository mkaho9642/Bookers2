<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Opinion</label>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <div>
    <%= f.submit 'Create Book', class: 'btn btn-success', method: :post %>
  </div>
<% end %>