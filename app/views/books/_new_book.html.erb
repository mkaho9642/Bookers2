<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <label>Title</label>
  <div class="form-group">
    <%= f.text_field :title %>
  </div>
  <label>Body</label>
  <div class="form-group">
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>