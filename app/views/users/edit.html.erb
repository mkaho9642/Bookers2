<h1>User info</h1>
  <%= form_with model: @user do |f| %>
    <label>Name</label>
    <div class="field">
      <%= f.text_field :name %>
    </div>
    
    <label for="inputImage">Image</label><br>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>

    <label>Introduction</label>
    <div class="field">
      <%= f.text_area :introduction %>
    </div>

    <div class="field">
      <%= f.submit 'Update User' %>
    </div>

    <div>
      <%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
    </div>
  <% end %>