<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user_info', user: @user %>
      <%= render 'books/new_book', book: @books %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td></td>
              <td><span><%= @user.name %></span></td>
              <td>
                <%= link_to user_path(@user.id), method: :get do %>Show<% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </table>
    </div>
  </div>
</div>