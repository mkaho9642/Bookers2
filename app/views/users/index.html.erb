<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user_info', user: @user %>
      <%= render 'books/new_book', book: @books %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><span><%= user.name %></span></td>
              <td>
                <%= link_to user_path(user.id), method: :get do %>Show<% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>